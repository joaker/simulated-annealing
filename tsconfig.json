{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "compilerOptions": {
      "lib": ["es2022"],
      "module": "ES2020",
      "target": "ES2015",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      "outDir": "./lib/ems"
    },
  
    "include": ["./src"]
  }